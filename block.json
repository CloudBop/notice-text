{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "blox/notice-text",
	"title": "Notice Text",
	"category": "text",
	"description": "A box of text wrapped in borders, colours and styling.",
	"keywords": [ "text", "paragraph", "box" ],
	"icon": "format-aside",
	"supports": {
		"html": false
	},
	"styles": [
		{
			"name": "information",
			"label": "Information",
			"isDefault": true
		},
		{
			"name": "warning",
			"label": "Warning"
		},
		{
			"name": "error",
			"label": "Error"
		},
		{
			"name": "important",
			"label": "Important"
		}
	],
	"example": {
		"attributes": {
			"copy": "This is some text!"
		}
	},
	"textdomain": "notice-text",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"attributes": {
		"defaultClass": {
			"type": "string",
			"default": "is-style-information"
		},
		"className": {
			"type": "string",
			"default": "[className] won't work - reserved, but [classNames] works"
		}
	}
}
